@Library('mylibrary')_
pipeline
{
    agent any
    stages
    {
        stage("ContDownload")
        {
            steps
            {
                script
                {
                    git'https://github.com/intelliqittrainings/maven.git' 
                }
            }
        }
        stage("ContBuilt")
        {
            steps
            {
                script
                {
                    sh'mvn package' 
                }
            }
        }
        stage("ContDeployment")
        {
            steps
            {
                script
                {
                    sh'scp /var/lib/jenkins/workspace/Declarativepipelinewithmasterslave/webapp/target/webapp.war ubuntu@172.31.11.15:/var/lib/tomcat9/webapps/testapp.war'
                }
            }
        }
        stage("ContTesting")
        {
            steps
            {
                script
                {
                    git'https://github.com/intelliqittrainings/FunctionalTesting.git'
                    sh 'java -jar /var/lib/jenkins/workspace/Declarativepipelinewithmasterslave/testing.jar'
                }
            }
        }
        stage("ContDelivery")
        {
            steps
            {
                script
                {
                    sh'scp /var/lib/jenkins/workspace/Declarativepipelinewithmasterslave/webapp/target/webapp.war ubuntu@172.31.6.130:/var/lib/tomcat9/webapps/prodapp.war' 
                }
            }
        }
    }
}
